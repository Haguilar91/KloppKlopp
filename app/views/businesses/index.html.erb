<p id="notice"><%= notice %></p>

<h1>Businesses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.description %></td>
        <td><img height="100px" src="<%= business.image %>"/></td>
        <td><%= business.is_active ? "Yes" : "No" %></td>
        <td>
          <%= link_to business, class:'btn-floating btn-large waves-effect waves-light teal' do %>
            <i class="material-icons">mode_edit</i>
          <% end %>
        </td>
        <td>
          <%= link_to business, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-floating btn-large waves-effect waves-light teal' do %>
            <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div align="right">
  <%= link_to new_business_path, class:'btn-floating btn-large waves-effect waves-light teal' do%>
    <i class="material-icons">add</i>
  <% end %>
</div>
